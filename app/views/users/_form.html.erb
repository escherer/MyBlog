<%= form_for @user do |f| %>

	<% if @user.errors.any? %>
		<ul>
			<% @user.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :Name %>
	<%= f.text_field :name %><br />
	<%= f.label :Email %>
	<%= f.email_field :email %><br />
	<%= f.label :Password %>
	<%= f.password_field :password %><br />
	<%= f.label :Location %>
	<%= f.text_field :location %><br />
	<%= f.label :Bio %>
	<%= f.text_area :bio %><br />
	<%= f.submit %>
<% end %>